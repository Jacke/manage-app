= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label ":title"
    = f.text_field :title
  .field
    = f.label ":onpn"
    = f.text_field :onpn
  .field
    = f.label ":author"
    = f.text_field :author 
  .field
    = f.label ":publisher"
    = f.text_field :publisher 
  .field
    = f.label ":genre"
    = f.text_field :genre
  .field
    = f.label ":category"
    = f.text_field :category 
  .actions
    = f.submit 'Save'