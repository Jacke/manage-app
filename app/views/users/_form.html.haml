= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "ФИО"
    = f.text_field :name
  .field
    = f.label "email"
    = f.text_field :email
  .field
    = f.label "admin?"
    = f.text_field :admin
  .actions
    = f.submit 'Save'